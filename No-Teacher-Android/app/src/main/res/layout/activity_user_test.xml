<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <Toolbar
            android:id="@+id/TopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:id="@+id/test_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/back"
                 />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:text="单词测试"/>
            <Button
                android:id="@+id/testSkip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="跳过测试"
                android:textSize="15sp"
                android:gravity="end|bottom"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                style="@style/Widget.Material3.Button.TextButton"
                />
        </Toolbar>



        <LinearLayout
            android:id="@+id/llTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/TopBar">
            <TextView
                android:id="@+id/word_page_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="第1～8单词"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/TopBar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            app:layout_constraintTop_toBottomOf="@+id/llTitle">

            <Button
                android:id="@+id/first_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton"
                android:clickable="true"
                android:maxLines="2"
                android:text="apple"
                android:textColor="#666666"
                android:textSize="18sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/second_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton"
                android:clickable="true"
                android:maxLines="2"
                android:text="apple"
                android:textColor="#666666"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_layout"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_below="@+id/first_layout"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            app:layout_constraintTop_toBottomOf="@+id/first_layout">

            <Button
                android:id="@+id/three_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton"
                android:clickable="true"
                android:maxLines="2"
                android:text="apple"
                android:textColor="#666666"
                android:textSize="18sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/four_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton"
                android:clickable="true"
                android:maxLines="2"
                android:text="apple"
                android:textColor="#666666"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/three_layout"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_below="@+id/second_layout"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            app:layout_constraintTop_toBottomOf="@+id/second_layout">

            <Button
                android:id="@+id/five_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton"
                android:clickable="true"
                android:maxLines="2"
                android:text="apple"
                android:textColor="#666666"
                android:textSize="18sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/six_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton"
                android:clickable="true"
                android:maxLines="2"
                android:text="apple"
                android:textColor="#666666"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/four_layout"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_below="@+id/three_layout"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            app:layout_constraintTop_toBottomOf="@+id/three_layout">

            <Button
                android:id="@+id/seven_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton"
                android:clickable="true"
                android:maxLines="2"
                android:text="apple"
                android:textColor="#666666"
                android:textSize="18sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/eight_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton"
                android:clickable="true"
                android:maxLines="2"
                android:text="apple"
                android:textColor="#666666"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:text="下一篇"
            android:id="@+id/next_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:enabled="false"
            app:layout_constraintBottom_toTopOf="@id/ReTest"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/ReTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="重新测试"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>