<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.android.viewmodel.HomeViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/white_background3"
        tools:ignore="MissingDefaultResource"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/image_a"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_default_avatar"
            ></ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_a"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Title"
                android:textSize="20sp"
                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/level_a"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="?attr/colorPrimary"
                    android:text="难度:600" />

                <TextView
                    android:id="@+id/words_a"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="393词"
                    android:textSize="12sp"
                    android:layout_marginBottom="10dp"
                    ></TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/badge_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/article_background"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textColor="#ffffff"
                android:text="111"
                android:paddingLeft="5dp"
                android:paddingRight="4dp"
                android:textSize="13sp"></TextView>
        </RelativeLayout>
    </LinearLayout>
</layout>